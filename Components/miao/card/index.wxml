<view class="i-class i-card {{ full ? 'i-card-full' : '' }}">
    <view class="i-class i-card-header">
        <view class="i-card-header-content">
            <image class="i-card-header-thumb {{circle?'i-card-header-thumb-circle':''}}" src="{{ thumb }}" mode="aspectFit" wx:if="{{ thumb }}" />
            <view class="i-card-header-title">
                <view class="i-card-header-content-title">
                {{ title }}
                </view>     
                <view class="i-card-header-content-subtitl">
                    {{subtitle}}
                </view>
            </view>
        </view>
        <view class="i-card-header-extra" wx:if="{{ extra }}">{{ extra }}</view>
        <slot name="extra"></slot>
    </view>
    <view class="i-class i-card-body">
        <slot name="content"></slot>
    </view>
    <view class="i-class i-card-footer">
        <slot name="footer"></slot>
    </view>
</view>