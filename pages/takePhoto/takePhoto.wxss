/* pages/takePhoto/takePhoto.wxss */
.camera{
  position: absolute;
  z-index: 1;
}
.camera_bottom{
  position: absolute;
  z-index: 2;
  bottom: 0;
  width: 100%;
  height: 140px;
  background-color:rgb(251, 251,253);

}
.photo{
  position: absolute;
  top: 50%;
  transform:translate(-50%,-50%);
  left: 20%;
  width: 65px;
  height: 65px;
  border-radius:100% ;
  box-shadow:0px 5px 15px -2px #368560;
  background-color: #368560;
  color:white;
  font-weight: bold;
  font-size: 14px;
  text-align: center;
}
.photoText{
  display: block;
  margin-top: 8px;
}
.photo_icon{
  display: block;
  position: relative;
  top:40%; 
  left:50%; 
  transform:translate(-50%,-50%);
  width: 34px;
  height: 32px;
}
.circle{
  position: relative;
  top:50%; 
  left:50%; 
  transform:translate(-50%,-50%);
  width: 90px;
  height: 90px;
  border: aliceblue 3px solid;
  border-radius:100% ;
  background-color: #20C58D;
  box-shadow:0px 10px 15px 0px rgba(32, 197, 141, .8);
}

.camera_icon{
  position:absolute; 
  top:50%; 
  left:50%; 
  transform:translate(-50%,-50%);
  display: block;
  width: 64px;
  height: 64px;
}