/*使屏幕变暗  */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1;
  color: #fff;
}
/*对话框 */
.commodity_attr_box {
  position: absolute;
  z-index: 2;
  bottom: -10rpx;
  left: 5%;
  height: 860rpx;
  width: 90%;
  border-radius: 10px;
  overflow: hidden;
  background: #fff; 
}
.selectTip{
  display: block;
  margin: 20rpx 64rpx;
  font-family: "微软雅黑",sans-serif;
  font-size: 38rpx;
  font-weight: bold;
}
.crop_container{
  z-index: 2;
  width: 100%;
  height: 820rpx;
}
ul{
  display: block;
  width:100%;
  text-align: center;
}
ul li{
  display: inline-block;
  width: 25%;
  height: 180rpx;
  margin: 16rpx;
  line-height: 70rpx;
  border-radius:18rpx ;
  text-align: center;
  background-color: rgba(242, 242, 242, 1);
}
image{
  display: block;
  padding: 0;
  margin: 0;
  width: 60%;
  height: 60%;
  margin: 0 auto;
}
.next_button{
  margin: 20rpx auto;
  width: 300rpx;
  height: 90rpx;
  border-radius: 60rpx;
  text-align: center;
  line-height: 90rpx;
  background-color: #1C935B;
  box-shadow:0px 5px 15px -2px #368560;
}