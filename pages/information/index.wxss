/* pages/information/index.wxss */
.information_container{
  background-size: 100% 100%;
}
.card {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 95%;
  height: 300rpx;
  margin: 3% auto;
  /* background-color: aqua; */
  background-color: rgb(240, 240, 240);
  border: 1px solid gray ;
  border-radius: 24rpx;
  box-shadow: 0 2px 2px 2px rgba(182, 180, 180, 0.4);
  transition: 5s;
}
.card:active{
  scale: .9;
}

.card_image {
  flex-shrink: 0;
  width: 35%;
  height: 270rpx;
  margin: 0 10rpx;
  border-radius: 24rpx;
  overflow: hidden;
}

.card_image image {
  width: 100%;
  height: 100%;
}

.card_content {
  width: 61%;
  height: 270rpx;
}

.card_title {
  font-size: large;
  font-weight: bold;
  color: black;
  letter-spacing: 3rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}


.card_desc {
  display: -webkit-box;
  height: 140rpx;
  margin-top: 2%;
  font-size: 28rpx;
  text-indent: 2em;
  overflow: hidden;
  color: black;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
}


.source {
  margin-top: 5%;
  font-size: 24rpx;
  color: #606361;
}
