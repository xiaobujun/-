.person_container{
  display: flex;
  flex-direction: column;
}
/* 每一项个人信息 */
.section{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 90%;
  height: 60px;
  margin: 20px auto;
  border-bottom: 2px solid rgba(240, 240, 240, 1) ;
}
/* 为头像设置高一点 */
.section:nth-child(1){
  height: 80px;
}

.right {
  margin-left: auto;
  margin-right: 50rpx;
  /* background-color: #1aad19; */
}
.group{
  margin-left: auto;
  margin-right: 50rpx;
}

.avatar{
  display: block;
  width: 72px;
  height: 72px;
  background-color: rosybrown;
  border-radius: 8px;
}
.radio_container{
  width: 80%;
  margin-left: 0%;
  margin-right: 50rpx;
  background-color: #1aad19;
}
.label-2{
  display: inline;
  margin-left: 5px;
}
.label-2__icon {
  position: relative;
  display: inline-block;
  vertical-align: middle;
  margin-right: 10px;
  width: 18px;
  height: 18px;
  background: rebeccapurple;
  border-radius: 50px;
}
.label-2__icon-checked {
  position: absolute;
  left: 3px;
  top: 3px;
  width: 12px;
  height: 12px;
  background: #1aad19;
  border-radius: 50%;
}
input{
  position: relative;
  right:0;
  bottom: 0;
  text-align: right;
  /* background-color: black; */
}
::-webkit-input-placeholder { /* WebKit browsers */
  direction: rtl;
}
 