/* pages/result/index.wxss */
/* 整个页面的样式 */
.result_pages {
    background-image: linear-gradient(#61D2A9, #FFF);
    display: flex;
    flex-flow: column;
}

/* 顶部返回及识别结果区域样式 */
.topBar {
    padding: 8rpx 0rpx 8rpx 0rpx;
    display: flex;
    flex-flow: row;
}

/* 顶部返回箭头的样式 */
.returnArrow {
    width: 48rpx;
    height: 48rpx;
    padding: 0rpx 0rpx 0rpx 16rpx;
}

/* 顶部识别结果样式 */
.topBar span {
    position: relative;
    margin: 0 auto;
    transform: translateX(-24%);
}

/* 拍照的图片样式 */
.reuslt_image {
    text-align: center;
    margin: 30rpx auto;
}

/* 拍照的图片样式 */
.reuslt_image image {
    width: 640rpx;
    height: 394rpx;
    border-radius: 46rpx;
}

/* 识别结果区域样式 */
.result_info_simple {
    height: 36vh;
}

/* 用于去除 scroll-view 组件滚动条的 view 组件样式 */
.cutScrollView {
    width: 100%;
    height: 90%;
    overflow: hidden;
}

/* scroll-view 组件样式 */
.result_info_simple #sv {
    width: 90%;
    height: 100%;
    white-space: nowrap;
    margin-top: 30rpx;
    margin-left: 40rpx;

}

/* 有 wx:for 循环的 view 组件样式 */
.result_info_simple #forView {
    display: inline-block;
}

/* 中间那个识别结果文字样式 */
.result_info_simple #resultText {
    display: flex;
    flex-flow: column;
    white-space: normal;
    margin-left: 72rpx;
    width: 206rpx;
    height: 66rpx;
    line-height: 40rpx;
    border-radius: 114rpx;
    color: #FFF;
    background-color: rgba(54, 133, 96, 100);
    text-align: center;
    justify-content: center;
    box-shadow: 0rpx 4rpx 12rpx 0rpx rgba(54, 133, 96, 100);
}

/* 识别结果卡片样式 */
.resultBox {
    background-color: #FFF;
    display: flex;
    flex-flow: column;
    width: 456rpx;
    height: 302rpx;
    line-height: 40rpx;
    border-radius: 46rpx;
    border: 1px solid rgba(187, 187, 187, 100);
    margin-right: 40rpx;
}

/* 识别结果卡片结果名样式 */
.resultBox #resultName {
    margin: 20rpx 0rpx 0rpx 27rpx;
    width: 300rpx;
    height: 29px;
    font-weight: 600;
    color: rgba(16, 16, 16, 100);
    font-size: 20px;
    text-align: left;
    font-family: SourceHanSansSC-bold;
}

/* 识别结果卡片包含图片和描述的 view 组件样式 */
.resultBox view {
    display: flex;
    flex-flow: row;
    margin: 27rpx 0rpx 0rpx 25rpx;
}

/* 识别结果卡片图片样式 */
.resultBox view image {
    width: 200rpx;
    height: 194rpx;
    line-height: 40rpx;
    border: 1px solid rgba(187, 187, 187, 100);
    border-radius: 18rpx;
    margin-top: -19rpx;
}

/* 识别结果卡片描述样式 */
.resultBox view text {
    margin: 0rpx 0rpx 0rpx 13rpx;
    width: 200rpx;
    height: 110rpx;
    color: rgba(16, 16, 16, 100);
    font-size: 28rpx;
    text-align: left;
    font-family: SourceHanSansSC-regular;
    white-space: normal;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 3;
    overflow: hidden;
    text-overflow: ellipsis;
}

/* 识别结果卡片准确率样式 */
.resultBox #accuracy {
    display: flex;
    flex-flow: column;
    margin-left: auto;
    width: 200rpx;
    height: 40rpx;
    margin-top: -231rpx;
    right: 77rpx;
    text-align: center;
    vertical-align: middle;
    font-weight: 600;
    color: #fff;
    background: #FF8146;
    border: 1px solid #FF8146;
    border-radius: 100rpx 0rpx 0rpx 100rpx;
}

/* 识别结果卡片详情样式 */
.resultBox #more {
    margin: 150rpx 0rpx 0rpx 240rpx;
    width: 88rpx;
    height: 40rpx;
    color: rgba(16, 16, 16, 77);
    font-size: 28rpx;
    text-align: left;
    font-family: SourceHanSansSC-regular;
}

/* 下方相关问答样式 */
.QaA {
    display: flex;
    width: 676rpx;
    height: 66rpx;
    margin: 0 auto;
    margin-top: 44rpx;
    border-radius: 114rpx;
    background-color: rgba(32, 197, 141, 100);
    text-align: center;
    align-items: center;
    justify-content: flex-end;
    box-shadow: 0rpx 4rpx 12rpx 0rpx rgba(32, 197, 141, 100);
}

/* 下方相关问答的相关问答文字样式 */
.QaA #qa {
    width: 128rpx;
    height: 54rpx;
    color: rgba(255, 255, 255, 100);
    font-size: 32rpx;
    text-align: left;
    margin-right: auto;
    margin-left: 24rpx;
    font-family: SourceHanSansSC-regular;
}

/* 下方相关问答的发布和图标组合 view 组件样式 */
.QaA view {
    display: flex;
    flex-flow: row;
    text-align: center;
    align-items: center;
    justify-content: center;
}

/* 下方相关问答的图标样式 */
.QaA view image {
    width: 52rpx;
    height: 52rpx;
    margin-right: 14rpx;
}

/* 下方相关问答的发布文字样式 */
.QaA view #publish {
    font-weight: 600;
    width: 56rpx;
    height: 40rpx;
    color: rgba(255, 255, 255, 100);
    font-size: 28rpx;
    text-align: left;
    margin-right: 48rpx;
    margin-bottom: 2rpx;
    font-family: SourceHanSansSC-bold;
}