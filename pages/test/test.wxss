/* pages/about/about.wxss */
.about_container{
  position: relative;
  z-index: 2;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 20px;
  
    background-image: linear-gradient(#61D2A9 40%, #FFF 90%);
  }
  .head_portrait_container{
    position: relative;
    width: 100%;
    height: 300rpx;
    /* background-color: yellow; */
  }
  .head_portrait{
    position:absolute;
    z-index: 2;
    top: 45%;
    left: 50%;
    transform: translate(-50%,-50%);
    width:194rpx;
    height:194rpx;
    border-radius:50% ;
    text-align: center;
    font-weight: bold;
    color: #368560;
    line-height: 440rpx;
    background-color: white;
  }
  .head_portrait image{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    height: 160rpx;
    width: 160rpx;
    border-radius:50% ;
  }
  
  
  