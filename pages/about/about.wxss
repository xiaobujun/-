/* pages/about/about.wxss */
.about_container{
position: relative;
z-index: 2;
display: flex;
flex-direction: column;
justify-content: center;
align-items: center;
font-size: 20px;

  background-image: linear-gradient(#61D2A9 40%, #FFF 90%);
}
.head_portrait_container{
  position: relative;
  width: 100%;
  height: 300rpx;
  /* background-color: yellow; */
}
.head_portrait{
  position:absolute;
  z-index: 2;
  top: 45%;
  left: 50%;
  transform: translate(-50%,-50%);
  width:194rpx;
  height:194rpx;
  border-radius:50% ;
  text-align: center;
  font-weight: bold;
  color: #368560;
  line-height: 440rpx;
  background-color: white;
}
.head_portrait image{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  height: 160rpx;
  width: 160rpx;
  border-radius:50% ;
}

.menuItem{
  width: 100%;
  /* background-color: brown; */
}
.setting_options{
  position: relative;
  width:90% ;
  height: 86rpx;
  margin: 5%;
  border: 1px solid #BBBBBB;
  border-radius: 26rpx;
  overflow: hidden;
  background-color:white;
}
.setting_options image{
  position: relative;
  top: 50%;
  left: 10%;
  transform: translate(-50%,-50%);
  width: 64rpx;
  height: 64rpx;
  /* background-color: blue; */
}
.setting_options text{
  display: block;
  position: relative;
  width: 100rpx;
  top: -35%;
  left: 35%;
  transform: translate(-50%,-50%);
  width: 200rpx;
  /* background-color: greenyellow; */
}
.setting_options image:nth-child(3){
  position: absolute;
  left: 95%;
  transform: translate(-50%,-50%);
  width: 64rpx;
  height: 64rpx;

}

