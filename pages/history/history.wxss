/* pages/history/history.wxss */
.history_tab {
  display: flex;
  width: 90%;
  margin-left: 5%;
}

.tab-item {
  flex: 1;
  font-size: 20px;
  text-align: center;
  line-height: 72rpx;
  border-bottom: 6rpx solid #eee;
}

.content {
  flex: 1;
}

.content>swiper {
  height: 100%;
}

.tab-item.active {
  color: #368560;
  /* border-bottom-color: #368560; */
}

.history_content {
  width: 90%;
  margin:5% 0 0 5%;
}

.history_content swiper {
  height: 100vh;
}

.disease_content {
  width: 100%;
  /* height: 900px; */
}

.text {
  height: 26px;
  color: rgba(16, 16, 16, 100);
  font-size: 18px;
  font-weight: bold;
  font-family: SourceHanSansSC-regular;
}

.image_content {
  display: flex;
  flex-direction: row;
  width: 1400rpx;
}

.dieaseImage {
  display: inline-block;
  width: 123px;
  height: 121px;
  margin:2% 2px 3%;
  border-radius: 20px;
  overflow: hidden;
}
.dieaseImage:nth-child(1){
  margin-left:0 ;
}

/* pages/information/index.wxss */
.information_container{
  background-size: 100% 100%;
}
.card {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 95%;
  height: 300rpx;
  margin: 3% auto;
  /* background-color: aqua; */
  background-color: rgb(240, 240, 240);
  border: 1px solid gray ;
  border-radius: 24rpx;
  box-shadow: 0 2px 2px 2px rgba(182, 180, 180, 0.4);
  transition: 5s;
}
.card:active{
  scale: .9;
}

.card_image {
  flex-shrink: 0;
  width: 35%;
  height: 270rpx;
  margin: 0 10rpx;
  border-radius: 24rpx;
  overflow: hidden;
}

.card_image image {
  width: 100%;
  height: 100%;
}

.card_content {
  width: 61%;
  height: 270rpx;
}

.card_title {
  font-size: large;
  font-weight: bold;
  color: black;
  letter-spacing: 3rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}


.card_desc {
  display: -webkit-box;
  height: 140rpx;
  margin-top: 2%;
  font-size: 28rpx;
  text-indent: 2em;
  overflow: hidden;
  color: black;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
}


.source {
  margin-top: 5%;
  font-size: 24rpx;
  color: #606361;
}
