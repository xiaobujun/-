.detail_container{
  position: absolute;
  background-image: linear-gradient(#61D2A9 10%, #FFF 40%);
  width: 100%;
  height: 100%;
}

/* 轮播图容器 */
.banner_container {
  width: 90%;
  height: 171px;
  margin: 2% 5% 0;
  border-radius: 23px;
  overflow: hidden;

}

swiper {
  width: 100%;
  height: 100%;
}
swiper-item {
  width: 100%;
  height: 100%;
}

.banner_container image {
  width: 100%;
  height: 100%;
  border-radius: 23px;
}

/* 详情描述容器 */
.result_description {
  width: 90%;
  margin: 4% 5% 0;
}

.name_container {
  width: 136px;
  height: 43px;
  text-align: center;
  border-radius: 30px;
  background-color: rgba(54, 133, 96, 100);
  text-align: center;
  line-height: 43px;
  box-shadow: 0px 2px 6px 0px rgba(54, 133, 96, 100);
}
.name_container text{
  color: #FFF;
  font-weight: bold;

}
.content text:nth-child(1){
  display: block;
  margin:5% 5% 2%;
  font-weight: bold;
}