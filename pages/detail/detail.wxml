<view class="detail_container">
  <!-- 轮播图 -->
  <view class="banner_container">
    <swiper indicator-dots="{{indicatorDots}}" easing-function="linear" autoplay="{{autoplay}}" circular="{{circular}}" interval="{{interval}}" duration="{{duration}}" previous-margin="{{previousMargin}}px" next-margin="{{nextMargin}}px">
      <block wx:for="{{banner}}" wx:for-item="bannerItem" wx:key="id">
        <swiper-item>
          <image src="{{bannerItem.imageSrc}}"></image>
        </swiper-item>
      </block>
    </swiper>
  </view>
  <!-- 结果描述 -->
  <view class="result_description">
    <!-- 学名 -->
    <view class="name_container">
      <text>{{nameOfDisease}}</text>
    </view>
    <view class="content">
      <text>分类及别名</text>
      <text>{{classifyDetail}}</text>
    </view>
    <view class="content">
      <text>形态特征</text>
      <text>{{featuresDetail}}</text>
    </view>
    <view class="content">
      <text>防治方法</text>
      <text>{{treatmentDetail}}</text>
    </view>

  </view>
</view>